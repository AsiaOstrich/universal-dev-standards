{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "UDS Standard Definition (v2)",
  "description": "Schema for Universal Development Standards .ai.yaml files, supporting Dual-Layer Architecture.",
  "type": "object",
  "required": ["standard"],
  "properties": {
    "standard": {
      "type": "object",
      "description": "The Imagination Layer: Human-readable and AI-promptable guidelines.",
      "required": ["id", "name", "description", "guidelines"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the standard (e.g., STR-001)."
        },
        "name": {
          "type": "string",
          "description": "Display name of the standard."
        },
        "description": {
          "type": "string",
          "description": "Brief description for AI context."
        },
        "guidelines": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of semantic guidelines."
        }
      }
    },
    "physical_spec": {
      "type": "object",
      "description": "The Physical Layer: Machine-readable constraints and validators.",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["filesystem_schema", "json_schema", "regex_validator", "custom_script", "script_file"],
          "description": "Type of the physical constraint."
        },
        "schema": {
          "type": "object",
          "description": "The actual schema definition (e.g., directory structure, JSON schema)."
        },
        "validator": {
          "type": "object",
          "description": "Configuration for the validation command.",
          "properties": {
            "command": {
              "type": "string",
              "description": "Shell command to run validation (use placeholders like {target})."
            },
            "script_path": {
              "type": "string",
              "description": "Path to a JS/TS script file that performs validation."
            },
            "rule": {
              "type": "string",
              "description": "Validation rule identifier."
            }
          }
        },
        "simulator": {
          "type": "object",
          "description": "Configuration for the simulation command (predictive validation).",
          "properties": {
            "command": { 
              "type": "string", 
              "description": "Command to run simulation. Use {input} placeholder." 
            },
            "script_path": {
              "type": "string",
              "description": "Path to a JS/TS script file that performs simulation."
            },
            "type": { 
              "type": "string", 
              "enum": ["command", "script", "script_file"], 
              "default": "command" 
            }
          },
          "required": ["command"]
        },
        "fixer": {
          "type": "object",
          "description": "Configuration for auto-fixing violations.",
          "properties": {
            "type": { 
              "type": "string", 
              "enum": ["command", "copy_template", "script_file"], 
              "description": "Type of fix action" 
            },
            "command": { 
              "type": "string", 
              "description": "Command to run for fixing (for type=command)" 
            },
            "script_path": {
              "type": "string",
              "description": "Path to a JS/TS script file that performs fixing (for type=script_file)."
            },
            "template_file": { 
              "type": "string", 
              "description": "Path to template file (relative to .standards/templates or absolute)" 
            },
            "destination": { 
              "type": "string", 
              "description": "Destination path (relative to project root)" 
            }
          },
          "required": ["type"]
        }
      }
    }
  }
}
