  "syncRules": {
    "AH-001": {
      "id": "AH-001",
      "name": "Evidence-Based Analysis",
      "nameZh": "證據基礎分析",
      "description": "Must read files before analyzing them",
      "severity": "error",
      "patterns": [
        "read.*file.*before",
        "must.*read",
        "MUST read files before analyzing",
        "read files before analyzing them",
        "Evidence-Based Analysis",
        "Evidence-Based"
      ],
      "source": "core/anti-hallucination.md",
      "section": "1. Evidence-Based Analysis Only"
    },
    "AH-002": {
      "id": "AH-002",
      "name": "Source Attribution",
      "nameZh": "來源標注",
      "description": "Cite sources for all factual claims",
      "severity": "error",
      "patterns": [
        "\\[Source:",
        "Source Attribution",
        "cite.*source",
        "must cite sources"
      ],
      "source": "core/anti-hallucination.md",
      "section": "2. Explicit Source Attribution"
    },
    "AH-003": {
      "id": "AH-003",
      "name": "Certainty Classification",
      "nameZh": "確定性分類",
      "description": "Use certainty tags for confidence level",
      "severity": "warning",
      "patterns": [
        "\\[Confirmed\\]",
        "\\[Inferred\\]",
        "\\[Assumption\\]",
        "\\[Unknown\\]",
        "Certainty Classification",
        "certainty.*tag"
      ],
      "source": "core/anti-hallucination.md",
      "section": "3. Classify Certainty Levels"
    },
    "AH-004": {
      "id": "AH-004",
      "name": "Recommendation Required",
      "nameZh": "推薦選項必要",
      "description": "When presenting options, include recommended choice with reasoning",
      "severity": "warning",
      "patterns": [
        "recommend.*option",
        "Recommended.*choice",
        "MUST.*recommend",
        "explicitly state.*Recommended"
      ],
      "source": "core/anti-hallucination.md",
      "section": "Recommendation Principles"
    },
    "SDD-001": {
      "id": "SDD-001",
      "name": "SDD Tool Detection",
      "nameZh": "SDD 工具偵測",
      "description": "Check for OpenSpec or Spec Kit integration",
      "severity": "error",
      "patterns": [
        "OpenSpec",
        "Spec Kit",
        "openspec/",
        "specs/",
        "\\.speckit"
      ],
      "source": "core/spec-driven-development.md",
      "section": "SDD Tool Integration"
    },
    "SDD-002": {
      "id": "SDD-002",
      "name": "SDD Command Priority",
      "nameZh": "SDD 命令優先級",
      "description": "Prioritize SDD commands over manual file editing",
      "severity": "warning",
      "patterns": [
        "prioritize.*command",
        "MUST prioritize using these commands",
        "Spec-Driven Development.*Priority",
        "SDD.*Priority"
      ],
      "source": "core/spec-driven-development.md",
      "section": "Command Priority"
    },
    "CMT-001": {
      "id": "CMT-001",
      "name": "Conventional Commits Format",
      "nameZh": "Conventional Commits 格式",
      "description": "Follow type(scope): subject format",
      "severity": "warning",
      "patterns": [
        "type.*scope.*subject",
        "<type>\\(<scope>\\):",
        "Conventional Commits",
        "feat.*fix.*docs.*chore"
      ],
      "source": "core/commit-message-guide.md",
      "section": "Commit Message Format"
    }
  },

  "checkConfig": {
    "excludeAgents": ["planned", "tool"],
    "verboseOutput": false,
    "failOnWarning": false,
    "reportFormat": "summary"
  }
